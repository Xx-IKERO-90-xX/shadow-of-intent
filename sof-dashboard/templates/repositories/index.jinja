{%extends 'base.jinja'%}

{%block title%} Fuentes Externas {%endblock%}

{%block content%}
<script type="module" src="/static/js/repository/main.js"></script>

<div id="alerts-div">

</div>

<style>
    .off {
        display: none;
    }
</style>

<template id="error-alert-template">
    <div id="error-alert" role="alert" class="alert alert-error alert-soft">
        <span id="alert-message"></span>
    </div>
</template>

<div class="overflow-x-auto mt-40 shadow shadow-blue-500 rounded-box border border-base-content/5 bg-base-100">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Nombre</th>
                <th>Url</th>
                <th>
                    <button onclick="add_repository.showModal()" class="btn btn-success btn-sm btn-circle">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                            <path
                                d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                        </svg>
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            {%for repo in repositories%}
            <tr>
                <th>{{repo.id}}</th>
                <td>{{repo.name}}</td>
                <td>{{repo.url}}</td>
                <td>
                    <button onclick="details_modal.showModal()" class="btn btn-info btn-sm btn-circle">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-info-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path
                                d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                        </svg>
                    </button>
                    <dialog id="details_modal" class="modal">
                        <div class="modal-box shadow-lg shadow-blue-500">
                            <form method="dialog">
                                <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
                            </form>
                            <h3 class="text-lg font-bold">{{repo.name}}</h3>
                            <hr>
                            <br>
                            <div class="overflow-y-auto">
                                <div>
                                    <label>
                                        <span class="font-bold">Tipo: </span>
                                        <span>{{repo.type}}</span>
                                    </label>
                                    <br><br>
                                    <label>
                                        <span class="font-bold">Url: </span>
                                        <a href="{{repo.url}}" class="link link-info">{{repo.url}}</a>
                                    </label>
                                    <br><br>
                                    <form action="{{url_for('repo.edit_description', id=repo.id)}}" method="post">
                                        <script src="/static/js/repository/edit_description.js"></script>
                                        <label>
                                            <span class="font-bold">Descripción: </span>
                                            <button type="button" id="open-edit-description" class="btn btn-xs btn-circle btn-info font-bold">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                    fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                    <path
                                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                    <path fill-rule="evenodd"
                                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                                </svg>
                                            </button>
                                            <textarea style="text-align: left;" id="description-text" name="description" class="textarea textarea-info w-full text-left" readonly>
                                                {{repo.description}}
                                            </textarea>
                                        </label>
                                        <button id="edit-btn" type="submit" class="off btn btn-xs btn-circle btn-success font-bold">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path
                                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                <path fill-rule="evenodd"
                                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                            </svg>
                                        </button>
                                        <button type="button" id="cancel-btn" class="off btn btn-xs btn-circle font-bold">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                                <path
                                                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                            </svg>
                                        </button>
                                        <script type="module" src="/static/js/repository/edit_description.js"></script>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </dialog>
                    <a type="button" href="{{url_for('repo.delete_repository', id=repo.id)}}"
                        class="btn btn-error btn-sm btn-circle">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-x-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path
                                d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                        </svg>
                    </a>
                </td>
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>
<br><br>
<div class="join shadow shadow-blue-500">
    {%if repositories.has_prev%}
    <a type="button" href="{{url_for('repo.index', page=repositories.prev_num)}}" class="join-item btn">«</a>
    {%endif%}
    <button class="join-item btn">Page {{repositories.page}}</button>
    {%if repositories.has_next%}
    <a type="button" href="{{url_for('repo.index', page=repositories.next_num)}}" class="join-item btn">»</a>
    {%endif%}
</div>



<dialog id="add_repository" class="modal">
    <div class="modal-box shadow-lg shadow-blue-500">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
        </form>
        <h3 class="font-bold text-lg">Agregar Nueva Fuente</h3>
        <br>
        <form id="add_repository_form" action="{{url_for('repo.add_repository')}}" method="post"
            class="mt-4 w-full max-w-lg">
            <div class="flex flex-wrap -mx-3 mb-2">
                <div class="w-full md:w-2/3 px-3 mb-6 md:mb-0">
                    <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-city">
                        Nombre
                    </label>
                    <input type="text" name="name" class="input input-info input-sm w-full">
                </div>
                <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                    <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-state">
                        Tipo
                    </label>
                    <select name="type" class="select w-full select-sm select-info">
                        <option value="txt">txt</option>
                        <option value="json">json</option>
                    </select>
                </div>
            </div>
            <br>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-password">
                        Url
                    </label>
                    <input type="url" name="url" class="input input-info input-sm w-full" required
                        placeholder="https://" value="https://"
                        pattern="^https?:\/\/([a-zA-Z0-9]([a-zA-Z0-9\-].*[a-zA-Z0-9])?\.)+[a-zA-Z].*$"
                        title="Tiene que ser una URL válida" />
                </div>
            </div>
            <br>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2" for="grid-password">
                        Descripción
                    </label>
                    <textarea style="text-align: left;" name="description" class="textarea textarea-info w-full"
                        placeholder="Descripción de la fuente"></textarea>
                </div>
            </div>
            <br><br>
            <button type="submit" class="btn btn-block font-bold btn-info">Agregar</button>
        </form>
</dialog>

<script type="module" src="/static/js/repository/main.js"></script>
{%endblock%}